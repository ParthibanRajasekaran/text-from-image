{
  "name": "text-from-image",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
  "prepare": "node scripts/git-hooks/install.js",
  "dev": "vite",
  "prebuild": "node scripts/validate-env.mjs",
  "build": "vite build",
  "postbuild": "node scripts/bundle-report.mjs",
  "check:budgets": "node scripts/check-budgets.mjs",
  "preview": "vite preview",
  "test": "vitest run --reporter=default",
  "test:watch": "vitest",
  "sitemap": "node scripts/build-sitemap.mjs",
  "test:a11y": "vitest run src/**/*.a11y.spec.tsx --reporter=default",
  "lint": "eslint . --max-warnings=0",
  "lint:a11y": "eslint . --max-warnings=0",
  "analyze": "ANALYZE=true npm run build",
  "check-bundle": "node scripts/check-bundle.mjs",
  "check-legacy-shims": "node scripts/check-legacy-shims.mjs",
  "deploy:prod": "node scripts/deploy-prod.mjs",
  "verify:prod": "node scripts/verify-prod.mjs",
  "verify:full": "node scripts/verify-full.mjs",
  "validate:env": "node scripts/validate-env.mjs",
  "env:diff": "node scripts/env-diff.mjs",
  "vercel:link": "vercel link --yes",
  "vercel:pull:prod": "vercel pull --environment=production --yes",
  "spec:lint": "spectral lint specs/api/openapi.yml",
  "spec:diff": "oasdiff --fail-on-diff breaking specs/api/openapi.yml cached/openapi.yml || echo 'no previous'",
  "spec:schemas": "node scripts/validate-json.cjs",
  "spec:test": "playwright test -g '@bdd'"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.0",
    "jspdf": "^4.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "tesseract.js": "^5.1.1",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.11",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.4.41",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.19",
    "ts-jest": "^29.4.6",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^1.2.2",
    "jsdom": "^24.0.0"
  }
}
