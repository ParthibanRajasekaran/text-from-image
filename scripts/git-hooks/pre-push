#!/usr/bin/env bash
# Pre-push hook: Run tests before push
# This hook runs `npm run test` and aborts the push if tests fail

set -e

echo "ğŸ” Running tests before pushâ€¦"
npm run test
status=$?

if [ $status -ne 0 ]; then
  echo "âŒ Tests failed. Push aborted."
  exit $status
fi

echo "âœ… Tests passed. Proceeding with push."
exit 0
