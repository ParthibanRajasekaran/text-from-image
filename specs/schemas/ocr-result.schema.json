{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OCRResult",
  "type": "object",
  "required": ["text", "confidence", "regions"],
  "properties": {
    "text": { "type": "string" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "regions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["bbox", "text"],
        "properties": {
          "bbox": {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 4,
            "maxItems": 4
          },
          "text": { "type": "string" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      }
    }
  }
}
